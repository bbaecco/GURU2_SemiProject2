<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentMemo"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/maleicon"/>

    <TextView
        android:id="@+id/txtMemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : boom"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtMemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : boom"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtMemPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 : boom"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtMemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜 : boom"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="로그아웃"/>

</LinearLayout>