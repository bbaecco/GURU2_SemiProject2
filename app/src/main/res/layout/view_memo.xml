<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#5CACECC9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:src="@drawable/maleicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="메모 내용이 들어갑니다."
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnModify"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DBF0F7"
                        android:text="수정" />

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DBF0F7"
                        android:text="삭제" />

                    <Button
                        android:id="@+id/btnDetail"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#DBF0F7"
                        android:text="상세보기" />
                </LinearLayout> <!--버튼 리니어-->

            </LinearLayout><!--메모 텍스트뷰 + 버튼 리니어-->

        </LinearLayout><!--이미지뷰 + 메모 텍스트뷰 + 버튼 리니어-->

        <TextView
            android:id="@+id/txtMemoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="2019.07.04"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout><!--이미지뷰 + 메모 텍스트뷰 + 버튼 리니어 + 날짜 텍스트뷰-->


</LinearLayout>